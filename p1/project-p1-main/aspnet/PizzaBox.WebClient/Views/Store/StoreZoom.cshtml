<!DOCTYPE html>

<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Document</title>

  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  <link rel="stylesheet" href="style.css">
</head>

<body class="container">
  <header class="row">
    <nav>
      <div><a href=""></a></div>
    </nav>
    <h1 class="col-md-6">PizzaBox</h1>
    <nav class="col-md-6">
      <a href="#"></a>
      <a href="#">drinks</a>
      <a href="#">about us</a>
    </nav>
  </header>

  <main class="row">
    <section class="row">
      <div class="row">
        <header class="">
          <h2>featured pizzas</h2>
        </header>
      </div>

      <ul class="row">
        <li class="col-md-4">
          <figure class="figure">
            <img class="figure-img img-fluid" src="https://i.pinimg.com/originals/83/b4/2e/83b42e6102716facf2e919b4f20a5686.jpg" alt="round cheesy pizza">
            <figcaption class="figure-caption">MeatLover Pizza</figcaption>
          </figure>
        </li>
        <li class="col-md-4">
          <figure>
            <img class="img-fluid" src="https://tastesbetterfromscratch.com/wp-content/uploads/2020/08/Veggie-Pizza-2.jpg" alt="square carnivore pizza">
            <figcaption>Healthy Veggie Pizza</figcaption>
          </figure>
        </li>
        <li class="col-md-4">
          <figure>
            <img class="img-fluid" src="https://www.queensleeappetit.com/wp-content/uploads/2019/02/Meat-Lovers-Pizza-3.jpg" alt="chocolate cookie pizza">
            <figcaption>Customized Pizza</figcaption>
          </figure>
        </li>
      </ul>
    </section>

    <section class="row">
      <header class="row">
        <h2>Place Order</h2>
      </header>

      <div class="row">
        <form action="">
          <h3>Pick a Store</h3>
          <input type="radio" name="store" id="pizzahut" value="pizzahut">
          <label for="pizzahut">PizzaHut</label>
          <input type="radio" name="store" id="" value="store002">
          <label for="store002">Store #002</label>
          <input type="radio" name="store" id="store003" value="store003">
          <label for="store003">Store #003</label>

          <h3>Pick Pizzas</h3>
          <input type="checkbox" name="pizzas" id="pizza001" value="meat">
          <label for="pizza001">Meat Pizza</label>
          <input type="checkbox" name="pizzas" id="pizza002" value="veggie">
          <label for="pizza002">Veggie Pizza</label>
          <input type="checkbox" name="pizzas" id="pizza003" value="customized">
          <label for="pizza003">GlutenFree Pizza</label>
          <input type="checkbox" name="pizzas" id="pizza004" value="vg">
          <label for="pizza004">Vegan Pizza</label>
          <input type="checkbox" name="pizzas" id="pizza005" value="seafood">
          <label for="pizza005">Seafood Pizza</label>

          <h3>User Info</h3>
          <input type="text" name="name" id="name" placeholder="fred belotte">
          <label for="name">Name</label>
          <input type="text" name="city" id="city" placeholder="Austin">
          <label for="city">City</label>
          <select name="state" id="state">
            <option value="None" selected>None</option>
            <option value="TX">Texas</option>
            <option value="RI">Rhode Island</option>
            <option value="MI">Michigan</option>
            <option value="NY">New York</option>
            <option value="HI">Hawaii</option>
          </select>

          <button type="submit">Place Order</button>
          <button type="reset">Cancel Order</button>
        </form>
      </div>
    </section>
  </main>

  <footer class="row">
    <small>Copyright &copy;</small>
  </footer>
</body>

</html>

<ul>
  @foreach (var store in ViewBag.Stores)
{
  <li>@store</li>
}
</ul>
